# Copy this file to secrets.toml and fill in your API keys
# DO NOT commit secrets.toml to version control!

# OpenAI API Key (required for LLM features)
OPENAI_API_KEY = "your-openai-api-key-here"

# Gmail OAuth credentials (optional, for email extraction)
# [gmail]
# client_id = "your-gmail-client-id"
# client_secret = "your-gmail-client-secret"
# refresh_token = "your-gmail-refresh-token"

# Google Calendar OAuth credentials (optional, for calendar integration)
# [calendar]
# client_id = "your-calendar-client-id"
# client_secret = "your-calendar-client-secret"
# refresh_token = "your-calendar-refresh-token"
